#!/usr/bin/env ruby

require 'ncursesw'
require 'maildir'
require 'date'

class Folder
  attr_reader :name

  def initialize name
    @name = name
  end

  def messages include_seen
    home = ENV['HOME']

    maildir = Maildir.new("#{home}/Mail/#{@name}", false)

    mails = maildir.list(:new) + maildir.list(:cur)

    mails.select! {|a|
      if a.flags.include? "S"
        include_seen
      else
        true
      end
    }

    mails.sort! {|a, b| File.basename(b.key) <=> File.basename(a.key) }

    mails
  end
end

class View
  attr_reader :position, :offset

  def initialize width, height, size
    @width  = width
    @height = height
    @size   = size
    @position, @offset = 0, 0
  end

  def up!
    if @position > 0
      @position -= 1
    elsif @offset > 0
      @offset -= 1
    end
  end

  def down!
    if @position < @height
      @position += 1
    elsif @position + @offset < @size - 1
      @offset += 1
    end
  end

  def page_up!
    @offset -= @height
    home! if @offset < 0
  end

  def page_down!
    @offset += @height
    end! if @offset + @position >= @size
  end

  def home!
    @position, @offset = 0, 0
  end

  def end!
    @position = @height
    @offset   = @size - @height - 1
  end
end

def sanitize_filename(filename)
  filename.gsub /[^a-z0-9\-]+/i, '_'
end

def date(mail)
  result = mail.select {|line| line[/^Date: /]}[0]
  Date.parse(result[6..-1].strip)
end

def from(mail)
  from = mail.select {|line| line[/^From: /]}[0]
  from = from[6..-1].strip
  name = from.match("(.+) <(.+?)@(.+)>")
  name && name[1] || from
end

def subject(mail)
  result = mail.select {|line| line[/^Subject: /]}[0]
  result[9..-1].strip
end

def init
  Ncurses.cbreak
  Ncurses.noecho
  Ncurses.nonl
  Ncurses.stdscr.intrflush(false)
  Ncurses.stdscr.keypad(true)
  Ncurses.use_default_colors
  Ncurses.start_color
end

def deinit
  Ncurses.echo
  Ncurses.nocbreak
  Ncurses.nl
  Ncurses.endwin
end

begin
  Ncurses.initscr

  init

  maxx = Ncurses.getmaxx(Ncurses.stdscr)

  maxy = Ncurses.getmaxy(Ncurses.stdscr)

  folder = Folder.new "INBOX"

  include_seen = true

  mails = folder.messages include_seen

  start    = 2
  width    = maxx
  height   = maxy - start - 1
  running  = true

  view = View.new width = maxx, height = maxy - start - 1, size = mails.length

  while (running)
    Ncurses.erase

    Ncurses.attroff(Ncurses::A_BOLD)
    Ncurses.attron(Ncurses::A_REVERSE)
    Ncurses.stdscr.move(0, 0)
    Ncurses.stdscr.addstr " " * width
    Ncurses.stdscr.move(0, 0)
    Ncurses.stdscr.addstr "  ALP     MESSAGE INDEX Folder: #{folder.name}"
    message_text = "Message #{view.offset + view.position + 1} of #{mails.length}  "
    Ncurses.stdscr.move(0, width - message_text.length)
    Ncurses.stdscr.addstr message_text
    Ncurses.attroff(Ncurses::A_REVERSE)

    (0..height).each do |index|
      mail    = mails[view.offset + index]
      lines   = mail.data.lines
      date    = date(lines)
      from    = from(lines)[0, 25]
      subject = subject(lines)[0, width - 40]
      if view.position == index
        Ncurses.attron(Ncurses::A_REVERSE)
      else
        Ncurses.attroff(Ncurses::A_REVERSE)
      end
      if mail.flags.include? "S"
        Ncurses.attroff(Ncurses::A_BOLD)
        flags = " "
      else
        Ncurses.attron(Ncurses::A_BOLD)
        flags = "N"
      end
      if mail.flags.include? "R"
        flags = "A"
      end
      Ncurses.stdscr.move(start + index, 0)
      Ncurses.stdscr.addstr " " * width
      Ncurses.stdscr.move(start + index, 0)
      Ncurses.stdscr.addstr sprintf(" %s  %s  %-25s %s", flags, date.strftime("%b %e"), from, subject)
    end
    ch = Ncurses.stdscr.getch
    case ch
    when 'q'.ord
      running = false
    when 'n'.ord
      include_seen = !include_seen
      mails = folder.messages include_seen
    when Ncurses::KEY_HOME
      view.home!
    when Ncurses::KEY_END
      view.end!
    when Ncurses::KEY_UP
      view.up!
    when Ncurses::KEY_DOWN
      view.down!
    when Ncurses::KEY_PPAGE
      view.page_up!
    when Ncurses::KEY_NPAGE
      view.page_down!
    when 'e'.ord
      mail    = mails[view.offset + view.position]
      lines   = mail.data.lines
      subject = subject(lines)
      target  = sanitize_filename(subject)
      system "cp #{mail.path} #{target}"
    when 13
      mail = mails[view.offset + view.position]
      mail.process
      mail.add_flag("S")
      deinit
      system "less #{mail.path}"
      init
    end
  end
ensure
  deinit
end
